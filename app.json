{
  "expo": {
    "name": "VisionClara",
    "slug": "VisionClara",
    "version": "1.0.0",
    "orientation": "portrait",

    // üîÅ Usa PNG, no SVG
    "icon": "./assets/icon.png",

    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172b"
    },

    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true
      // (para status bar en iOS usa <StatusBar .../> de 'expo-status-bar')
    },

    "android": {
      "package": "com.anonymous.VisionClara",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172b"
      }
    },

    // ‚úÖ Status/Navigation bar en Android van a nivel ra√≠z:
    "androidStatusBar": {
      "backgroundColor": "#0f172b",
      "barStyle": "light-content",
      "translucent": false,
      "hidden": false
    },
    "androidNavigationBar": {
      "backgroundColor": "#0f172b",
      "barStyle": "light-content",
      "visible": true
    },

    "web": {
      "output": "static",
      "favicon": "./assets/favicon.png" // ‚úÖ usa PNG para evitar broncas
    },

    "plugins": [
      // Puedes dejar solo el plugin sin config extra:
      "expo-router"
    ],

    "scheme": "acme"
  }
}
